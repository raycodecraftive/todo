generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  fullName String
  email    String @unique
  password String

  todos Todos[]
}

// 1 to many

model Todos {
  id        String  @id @default(cuid())
  title     String
  completed Boolean

  userID String

  user User @relation(fields: [userID], references: [id])
}
